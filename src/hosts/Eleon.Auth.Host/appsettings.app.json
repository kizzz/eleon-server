{
  "ConfigImports": {
    "BaseSettings": "../../../../appsettings/appsettings.base.json"
  },

  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://localhost:5002"
      }
    }
  },

  "ApplicationName": "Auth",
  "NotificationApplication": "Admin",
  "App": {
    "PathBase": "/auth",
    "Domain": "network-protected.com",
    "Authority": "https://network-protected.com/auth",
    "CorePath": "/core",
    "AuthPath": "/auth",
    "WebPush": ""
  },
  "ApplicationConfiguration": {
    "EnableEnrichment": true,
    "EnrichmentTimeoutSeconds": 30,
    "CacheTtlMinutes": 10,
    "Applications": [
      {
        "Name": "Admin",
        "Path": "/apps/admin",
        "FrameworkType": "Angular",
        "StyleType": "PrimeNg",
        "ClientApplicationType": "Portal",
        "Modules": [
          {
            "url": "/modules/layout",
            "pluginName": "Primeng Layout",
            "loadLevel": "RootModule",
            "orderIndex": 0,
            "expose": "./Module"
          },
          {
            "url": "/modules/administration",
            "pluginName": "administration",
            "loadLevel": "SubModule",
            "orderIndex": 0,
            "expose": "./Administration"
          },
          {
            "url": "/modules/dynamic-dashboard",
            "pluginName": "dynamic-dashboard",
            "loadLevel": "SubModule",
            "orderIndex": 2,
            "expose": "./Module"
          },
          {
            "url": "/modules/usermanagement",
            "pluginName": "usermanagement",
            "loadLevel": "Auto",
            "orderIndex": 4,
            "expose": "./Module"
          },
          {
            "url": "/modules/digital-archive",
            "pluginName": "digital-archive",
            "loadLevel": "SubModule",
            "orderIndex": 5,
            "expose": "./Module"
          },
          {
            "url": "/modules/chat",
            "pluginName": "eleoncorechat",
            "loadLevel": "SubModule",
            "orderIndex": 6,
            "expose": "./Module"
          }
        ]
      }
    ]
  },
  "ProxyRouter": {
    "Enabled": true,
    "ForwardEmptyPath": false,
    "IgnoreSslValidation": true,
    "SystemPathes": [
      "/api",
      "/hubs",
      "/files",
      "/swagger",
      "/MiniProfiler",
      "/profiler",
      "/health",
      "/Account",
      "/accout",
      "/themes"
    ],
    "Locations": [
      {
        "Path": "",
        "Type": 0,
        "DefaultRedirect": "",
        "SubLocations": [
          {
            "Path": "telemetry",
            "Type": 2,
            "SourceUrl": "http://localhost:4318",
            "IsAuthorized": true,
            "DefaultRedirect": "http://localhost:4318"
          }
        ]
      }
    ]
  },
  "SystemMessages": {
    "Enabled": true
  },
  "ApiKeyGrant": {
    "Enabled": true,
    "NotValidatedSecretKeys": [ "E5331DE93ADC31848466F53A3BA001FAD4B8834B5ED7C9911CC33E21772F0BE8E1669C00E5BEE310C56D5A59FD5B5118B559C75AEC6C88DD1E172F6B11EA1318" ]
  },
  "OTP": {
    "NotifyImmidiately": true,
    "AllowAnyOTP": false,
    "MaxRetryAttempts": 0,
    "ResendTime": 30
  },
  "TenantManagement": {
    "EnableMultiTenancy": true
  },
  "EventBus": {
    "ProviderOptionsJson": {
      "RabbitMqOptions": {
        "DefaultQueuePrefix": "auth_server_queue"
      }
    }
  },
  "IdentityServer": {
    "Clients": {
      "VPortal_App": {
        "ClientId": "VPortal_App",
        "ClientSecret": "1q2w3e*",
        "Type": "Undefined"
      },
      "VPortal_SDK_Api": {
        "ClientId": "VPortal_SDK_Api",
        "ClientSecret": "1q2w3e*",
        "Type": "Undefined"
      },
      "VPortal_Swagger": {
        "ClientId": "VPortal_Swagger",
        "ClientSecret": "1q2w3e*",
        "RootUrl": "https://network-protected.com/core",
        "Type": "HostServer"
      },
      "VPortal_ProxyClient": {
        "ClientId": "VPortal_ProxyClient",
        "ClientSecret": "1q2w3e*",
        "Type": "ProxyClient"
      },
      "VPortal_DriverClient": {
        "ClientId": "VPortal_DriverClient",
        "ClientSecret": "1q2w3e*",
        "Type": "DriverClient"
      }
    }
  },
  "IdentityUI": {
    "VehicleDriverCredentialsClients": [
      "VPortal_DriverClient"
    ]
  },
  "EnableDebug": false,
  "HealthChecks": {
    "Enabled": true,
    "EnabledChecks": [ "*" ],
    "HealthStatusPath": "/api/health/health-checks",
    "RestartEnabled": true,
    "UI": {
      "Enabled": true,
      "Path": "/",
      "Navigates": [
        {
          "Name": "Swagger",
          "Path": "/swagger"
        },
        {
          "Name": "Profiler",
          "Path": "/profiler"
        }
      ]
    },
    "ConfigurationCheck": {
      "Enabled": true,
      "ThrowExceptionOnInvalid": false,
      "Configurations": {
      }
    },
    "HttpCheck": {
      "Timeout": 60,
      "IgnoreSsl": true,
      "Urls": [
        {
          "Name": "Eleonsoft",
          "Url": "https://localhost:5001/api/health/health-checks",
          "GoodStatusCodes": [ 200 ]
        },
        {
          "Name": "SelfUrl",
          "Url": "https://localhost:5002/api/health/health-checks",
          "GoodStatusCodes": [ 200 ]
        }
      ]
    },
    "DatabaseMaxTablesSizeCheck": {
      "Connections": [
        {
          "Name": "Default",
          "Tables": [
            {
              "Name": "EcSystemLogs",
              "AllowedMaxKB": 100000
            }
          ]
        }
      ]
    },
    "DiskSpaceCheck": {
      "Items": [
        {
          "Path": "Logs",
          "MaxSizeMb": 500
        }
      ]
    }
  }
}
